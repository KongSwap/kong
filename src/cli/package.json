{
  "name": "@kong/cli",
  "version": "1.0.0",
  "description": "Command line interface for Kong",
  "type": "module",
  "bin": {
    "kong": "bin/index.js"
  },
  "scripts": {
    "cli": "tsx src/index.ts",
