    "postbuild": "chmod +x bin/index.js",
    "dev": "tsx watch src/index.ts"
  },
  "dependencies": {
    "commander": "13.1.0",
    "chalk": "5.4.1"
  },
  "devDependencies": {
    "@types/node": "22.13.4",
    "tsx": "4.19.3",
    "typescript": "5.7.3"
  }
} 